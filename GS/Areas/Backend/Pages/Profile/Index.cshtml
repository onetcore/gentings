@page
@model IndexModel
@{
    ViewData["Title"] = "修改资料";
    ViewBag.Current = "users";
}

<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="form-group mb-4">
                <label class="mb-2">用户名</label>
                <input type="text" class="form-control" asp-for="Input.UserName" readonly="readonly" />
                <span class="text-dange" asp-validation-for="Input.UserName"></span>
            </div>
            <div class="form-group mb-4">
                <label class="mb-2">昵称</label>
                <input type="text" class="form-control" asp-for="Input.NickName" />
                <span class="text-danger" asp-validation-for="Input.NickName"></span>
            </div>
            <div class="form-group mb-4">
                <label class="mb-2">电子邮件</label>
                <input type="email" class="form-control" asp-for="Input.Email" />
                <span class="text-danger" asp-validation-for="Input.Email"></span>
            </div>
            <div class="form-group mb-4">
                <label class="mb-2">头像</label>
                <div class="input-group-append">
                    <input type="text" class="form-control uploaded" asp-for="Input.Avatar" />
                    <a _click="upload" asp-page-handler="Upload" title="上传头像"><span class="bi-upload"></span></a>
                </div>
                <span class="text-danger" asp-validation-for="Input.Avatar"></span>
            </div>
            <div class="form-group mb-4">
                <button type="submit" class="btn btn-primary"> 修改 </button>
            </div>
        </form>
    </div>
</div>