@page
@model SettingsModel
@{
    ViewData["Title"] = "网站配置";
    ViewBag.Current = "settings";
}

<form method="post">
    <div class="form-group mb-3">
        <label>网站名称</label>
        <input type="text" asp-for="Input.SiteName" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.SiteName"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-check form-switch">
            <input type="checkbox" asp-for="Input.ValidCode" class="form-check-input" />
            开启登录验证码
        </label>
    </div>
    <div class="form-group mb-3">
        <button class="btn btn-primary" type="submit">提交</button>
    </div>
</form>
