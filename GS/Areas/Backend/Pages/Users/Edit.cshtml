@page
@model EditModel
@{
    ViewData["Title"] = "编辑用户";
    Layout = "_Modal";
}

<form method="post">
    <input type="hidden" asp-for="Input.UserId" />
    <div class="form-group mb-3">
        <label>用户名称</label>
        <input type="text" readonly="readonly" asp-for="Input.UserName" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.UserName"></span>
    </div>
    <div class="form-group mb-3">
        <label>昵称</label>
        <input type="text" asp-for="Input.NickName" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.NickName"></span>
    </div>
    <div class="form-group">
        <label>电子邮件</label>
        <input type="email" asp-for="Input.Email" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.Email"></span>
    </div>
</form>