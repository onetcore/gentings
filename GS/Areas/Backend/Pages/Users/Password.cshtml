@page
@model PasswordModel
@{
    ViewData["Title"] = "设置密码";
    Layout = "_Modal";
}

<form method="post">
    <input type="hidden" asp-for="Input.UserId" />
    <div class="form-group mb-3">
        <label>用户名称</label>
        <input type="text" readonly="readonly" asp-for="Input.UserName" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.UserName"></span>
    </div>
    <div class="form-group mb-3">
        <label>密码</label>
        <input type="password" asp-for="Input.Password" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.Password"></span>
    </div>
    <div class="form-group">
        <label>确认密码</label>
        <input type="password" asp-for="Input.ConfirmPassword" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
    </div>
</form>