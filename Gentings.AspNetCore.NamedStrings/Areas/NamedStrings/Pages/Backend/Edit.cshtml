@page
@model EditModel
@{
    ViewBag.Title = "字典实例";
    Layout = "_Modal";
}

<form method="post">
    <input type="hidden" asp-for="Input.Id" />
    <input type="hidden" asp-for="Input.ParentId" />
    <div class="form-group">
        <label>名称</label>
        @if (Model?.Input.Id > 0)
        {
            <input class="form-control" readonly="readonly" asp-for="Input.Name" />}
        else
        {
            <input class="form-control" asp-for="Input.Name" />
        }
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>值</label>
        <textarea class="form-control" asp-for="Input.Value" rows="3"></textarea>
    </div>
</form>